@page "/"
@using BoilerPlate.Services
@inject TicketService Tickets
@inject NavigationManager Nav

<h3>Submit a Ticket</h3>
<input @bind="content" placeholder="Describe your issue..." class="form-control mb-2" />
<button class="btn btn-success" @onclick="Submit">Submit</button>

@code {
    string content;
    void Submit()
    {
        // TODO: replace "demoUser" with real auth
        Tickets.Submit("demoUser", content);
        Nav.NavigateTo("/dashboard/demoUser");
    }
}